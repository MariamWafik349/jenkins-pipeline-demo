pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'my-app-image:latest' // Name of the Docker image
        REPO_URL = 'https://github.com/MariamWafik349/jenkins-pipeline-demo.git' // Repository URL
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Checked out repository from ${REPO_URL}"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    docker.build("${DOCKER_IMAGE}")
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo "Running tests..."
                    // Run the container and test endpoint
                    sh """
                    docker run -d --name test-container -p 5000:5000 ${DOCKER_IMAGE}
                    sleep 5
                    curl -f http://localhost:5000 || (echo 'Tests failed!' && exit 1)
                    docker stop test-container
                    docker rm test-container
                    """
                    echo "Tests completed successfully!"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying the Docker container..."
                    sh """
                    docker run -d --name deployed-container -p 5000:5000 ${DOCKER_IMAGE}
                    """
                    echo "Application deployed and running at http://<JENKINS_SERVER>:5000"
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
        success {
            echo "Pipeline finished successfully!"
        }
        failure {
            echo "Pipeline failed. Please check the logs for details."
        }
    }
}
